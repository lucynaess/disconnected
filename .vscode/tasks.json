{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Preview",
            "type": "process",
            "command": "hugo",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "serve",
                "--theme=kips",
                "--source=source",
                "--buildDrafts"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Blog",
            "type": "process",
            "command": "hugo",
            "args": [
                "--cleanDestinationDir",
                "--source=source",
                "--destination=../docs",
                "--theme=kips",
                "--enableGitInfo"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Undraft",
            "type": "process",
            "command": "hugo",
            "args": [
                "undraft",
                "--config=source/config.yml",
                "${file}"
            ],
            "problemMatcher": []
        }
    ]
}