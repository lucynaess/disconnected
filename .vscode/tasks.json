{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Preview",
            "type": "process",
            "command": "podman",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "run",
                "--rm",
                "--net=host",
                "--name=hp",
                "-v",
                "${workspaceFolder}:/workspace:z",
                "quay.io/adrianlucrececeleste/alpine-hugo:v1.0.0.",
                "serve",
                "--theme=kiss",
                "--source=/workspace/source",
                "--buildDrafts"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Blog",
            "type": "process",
            "command": "podman",
            "args": [
                "run",
                "--rm",
                "--net=host",
                "--name=hb-$(git rev-parse HEAD)",
                "-v",
                "${workspaceFolder}:/workspace:z",
                "quay.io/adrianlucrececeleste/alpine-hugo:v1.0.0.",
                "--cleanDestinationDir",
                "--source=/workspace/source",
                "--destination=/workspace/docs",
                "--theme=kiss",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}